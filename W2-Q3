import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.print("Permutasyonu  hesaplanacak sayıyı girin (n): ");
        int n = scanner.nextInt();

        System.out.print("Kaçlı permütasyon olacak? (r): ");
        int r = scanner.nextInt();

        if (n < 0 || r < 0 || n < r) {
            System.out.println("Geçersiz giriş! n ve r pozitif tam sayılar olmalıdır, n >= r olmalıdır.");
        } else {
            int result = calculatePermutation(n, r);
            System.out.println("P(" + n + ", " + r + ") = " + result);
        }

        scanner.close();
    }

    public static int calculatePermutation(int n, int r) {
        if (r == 0) {
            return 1;
        } else if (n < r) {
            return 0;
        } else {
            return calculatePermutation(n - 1, r - 1) * n;
        }
    }
}
